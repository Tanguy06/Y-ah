{% extends 'base.html.twig' %}

{% block title 'Administration' %}

{% block body %}
    <div class="container mt-4 mb-4">
        <h1>Administration </h1>
        <a href="{{ path("admin.property.new") }}" class="btn btn-outline-success mb-3 mt-3"><i class="fas fa-plus"></i></a>
        <table class="table table-striped">
            <thead>
            <th>Titre</th>
            <th>Categorie</th>
            <th>Actions</th>
            </thead>
            <tbody>
            {% for property in properties %}
            <tr>
                <td>{{ property.name }}</td>
                <td>{{ property.categorie }}</td>
                <td><a href="{{ path('admin.property.edit', {id: property.id}) }}" class="btn btn-outline-secondary"><i class="fas fa-cogs"></i></a></td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}